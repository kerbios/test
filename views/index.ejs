<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="http://getbootstrap.com/favicon.ico">
        <title>Elastic p2p file test</title>
        <meta name="author" content="kerbios">
        <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
        <link href="//getbootstrap.com/examples/cover/cover.css" rel="stylesheet">
        <link href="style.css" rel="stylesheet">
        <script src="/jquery/dist/jquery.min.js"></script>
        <script src="//simplewebrtc.com/latest.js"></script>

        <script>
            (function() {
                window.currentUser = {};
                window.currentUser.isReceiver = '<%= isReceiver %>';
                window.currentUser.id = '<%= id %>';
            })();
        </script>
    </head>
    <body>
        <div class="site-wrapper">
            <div class="site-wrapper-inner">
                <div class="cover-container">
                    <div class="masthead clearfix">
                        <div class="inner">
                            <h3 class="masthead-brand">Test</h3>
                            <nav>
                                <ul class="nav masthead-nav">
                                    <li><a href="//www.linkedin.com/profile/view?id=143245791">About me</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="inner cover">
                        <% if( isReceiver ) { %>
                            <h1 class="cover-heading">Please, wait for your file.</h1>
                            <p class="lead">
                                <div>Status:
                                    <div id="status"></div>
                                </div>
                                <div>You are connected to: kerbios.herokuapp.com/<%= id %></div>
                            </p>
                            <div id="statusBar">
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Files:</label>
                                    <div class="col-lg-4" id="files">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Progress:</label>
                                    <div class="col-lg-4">
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:0%">
                                                0%
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } else{ %>
                            <div id="senderPanel">
                                <h1 class="cover-heading">Send your file!</h1>
                                <p class="lead">
                                    <div style="font-size: large; margin-bottom:16px;"><i>Share link</i>:<br/><a style="cursor:pointer">kerbios.herokuapp.com/<%= id %></a>&nbsp;<button class="btn btn-default" id="copy-button" data-clipboard-text="kerbios.herokuapp.com/<%= id %>" title="Click to copy link.">Copy</button></div>
                                    <div id='container' class="btn btn-lg btn-default">Drag your file here</div>
                                </p>
                            </div>
                            <div id="statusBar">
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Status:</label>
                                    <div class="col-lg-4" id="status">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Progress:</label>
                                    <div class="col-lg-4">
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                                                0%
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <script src="/zeroclipboard/dist/ZeroClipboard.min.js"></script>
        <script src="/zeroclipboard/dist/ZeroClipboard.swf"></script>
        <script>
            new ZeroClipboard( document.getElementById("copy-button") );
        </script>
        <script src="file-transfer.js"></script>
        <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
    </body>
</html>